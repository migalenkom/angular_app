#wrapper
  div(ng-include="'nav.html'")
  #page-wrapper
    .container-fluid
      h3 Posts page
      .row
        .col-md-12
          .post(ng-repeat='post in posts track by $index')
            h4 {{post.title.rendered}}
            em {{post.date}}
            div(ng-bind-html='post.excerpt.rendered | sanitize')  
            a.btn.pull-right(ng-href='/posts/{{post.id}}') Read more
            a.btn.btn-warning.btn-sm(ng-href='/posts/{{post.id}}/edit') Edit
